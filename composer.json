{
    "name": "web-vision/deepl-write",
    "description": "DeepL Write support for TYPO3. Write better texts, translate to simple language",
    "type": "typo3-cms-extension",
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
        "ext-dom": "*",
        "typo3/cms-backend": "^12.4 || ^13.4",
        "typo3/cms-core": "^12.4 || ^13.4",
        "web-vision/deepl-base": "^1.0.1",
        "web-vision/deeplcom-deepl-php": "^1.12"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.70",
        "helmich/typo3-typoscript-lint": "^3.1.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "saschaegerer/phpstan-typo3": "^1.9",
        "typo3/testing-framework": "^8.2.7"
    },
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "web-vision GmbH",
            "email": "hello@web-vision.de"
        }
    ],
    "minimum-stability": "beta",
    "extra": {
        "typo3/cms": {
            "extension-key": "deepl_write",
            "ignore-as-root": false,
            "web-dir": ".Build/Web",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "app-dir": ".Build"
        },
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "optimize-autoloader": true,
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "WebVision\\DeeplWrite\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebVision\\DeeplWrite\\Tests\\": "Tests/"
        }
    },
    "suggest": {
        "web-vision/deepltranslate-core": "*"
    }
}
